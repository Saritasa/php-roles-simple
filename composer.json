{
    "name": "saritasa/php-roles-simple",
    "type": "library",
    "description": "User has field role_id and corresponding lookup table",
    "keywords": ["laravel", "middleware", "roles", "security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Populov",
            "email": "sergey@saritasa.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/database": "^5.4 || ^6.0",
        "illuminate/support": "^5.4 || ^6.0",
        "illuminate/http": "^5.4 || ^6.0",
        "saritasa/php-common": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "conflict": {
        "bican/roles": "^2.0"
    },
    "autoload": {
        "psr-4" : {
            "Saritasa\\Roles\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Saritasa\\Roles\\RolesServiceProvider"
            ]
        }
    }
}
